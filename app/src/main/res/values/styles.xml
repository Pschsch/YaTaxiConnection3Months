<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/alice</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:fontFamily">@font/alice</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CondTextStyle" parent="TextStyle">
        <item name="android:gravity">left</item>
    </style>
    <style name="LinkTextStyle" parent="TextStyle">
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="DialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/light</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:windowBackground">@color/light</item>
        <item name="android:ems">10</item>
    </style>
    <style name="CardViewStyle" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/light</item>
        <item name="cardCornerRadius">@dimen/buttonCorner</item>
    </style>
    <style name="DatePickerStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>
